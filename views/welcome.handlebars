<!doctype html>

<html>
{{> html-header}}

<body>
	<div class="container">
		
		<br/>

		<div class="ui-widget" align="center">
			<h2>Nutravisor</h2>
		</div>

		<hr/>

		<!-- what's expand()? -->
		<h4 style="color:black;" align="center" onclick="expand()" id="tt">Existing user? <i><a href="/login"><u>Log in</u></a></i></h4>
		<br/>

		<form id="signup" role="form" method="get" action="/onboarding"> <!-- /add -->
			<div class="form-group">
				<input type="email" class="form-control" id="email" placeholder="Email" name="email" style="margin-bottom:7px;">
				<!-- check password input: this was just a lucky guess -->
				<input type="password" class="form-control" id="password" placeholder="Password" name="password" style="margin-bottom:7px;">
				<input type="password" class="form-control" id="confirm" placeholder="Confirm Password" name="confirm">
			</div>
		</form>

		<form role="form" method="get" action="/" id="alt"></form>
		<p align="center">
			<input type="submit" id="submitBtn" class="btn btn-primary" value="Sign up" form="signup"></input>
			<input name="guest" value="true" form="alt" hidden>
			<input type="submit" class="btn btn-default" value="Browse as Guest" form="alt">
		</p>

	</div>

	<script src="js/jquery-1.11.0.js"></script>
	<script src="js/bootstrap.js"></script>
	<script src="js/common.js"></script>
</body>
</html>
